<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="@android:style/Widget.Holo.ActionBar.TabView" >
        <item name="android:colorBackground">@color/background_holo_dark</item>
    </style>

    <style name="AppCompatDark" parent="Theme.AppCompat.DayNight.DarkActionBar" >
        <item name="colorPrimary">@color/primary_material_dark_1</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="AppCompatDarkNoActionBar" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>

</resources>
