<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:colorBackground">@color/background_holo_dark</item>
        <item name="android:colorPrimaryDark">@color/holo_primary_dark</item>
        <item name="android:colorPrimary">@color/holo_primary</item>
    </style>

    <style name="AppCompatDarkNoActionBar" parent="Theme.AppCompat" >
        <item name="colorAccent">@color/accent_material_dark_1</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/explode</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/fade</item>
    </style>
</resources>